      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>mmm-orm-db-oracle-dialect</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>mmm-orm-db-oracle-jdbc</artifactId>
