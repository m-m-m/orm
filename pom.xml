      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>mmm-orm-db-derby-jdbc</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>mmm-orm-db-h2-dialect</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
